@keyframes pulse
	0%
		transform scale(1)
	14%
		transform scale(1.23)
	28%
		transform scale(1)
	42%
		transform scale(1.123)
	70%
		transform scale(1)

body, h1
	padding 0
	margin 0

body
	background #321
	color #CBA
	font-family sans-serif
	font-size 16px

	&:after
		display block
		content ''
		width 512px
		height 512px
		position absolute
		top 50%
		left 50%
		margin -256px 0 0 -256px
		background url(../images/the-shape.svg) no-repeat center center
		background-size 100%
		animation pulse infinite 1.23s

h1
	position absolute
	top 50%
	width 100%
	transform translateY(-50%)
	font-size 3em
	font-weight normal
	text-align center
